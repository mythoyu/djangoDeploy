{
  "builds": [
    {
      "src": "post/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "post/wsgi.py"
    }
  ],
  "env": {
    "DATABASE_URL": "postgresql://username:password@hostname:port/dbname"
  },
  "outputDirectory": "staticfiles"
}
